<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="app" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/BdMed</non-jta-data-source>
        <class>app.entity.Role</class>
        <class>app.entity.User</class>
        <class>app.entity.Solicitacao_Mudanca</class>
        <class>app.entity.Horario_Escala</class>
        <class>app.entity.Hospitais</class>
        <class>app.entity.Plantao</class>
        <class>app.entity.Medico</class>
        <class>app.entity.Device</class>
        <class>app.entity.Local_Plantao</class>
        <class>app.entity.Agenda</class>
        <class>app.entity.Convenio</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>
        </properties>
    </persistence-unit>
</persistence>
